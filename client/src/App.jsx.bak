import { useState } from 'react';
import Upload from './components/Upload';
import GraphView from './components/GraphView';
import RingTable from './components/RingTable';
import SummaryPanel from './components/SummaryPanel';
import axios from 'axios';

const API_URL = import.meta.env.VITE_API_URL || 'http://localhost:5000/api';

function App() {
  const [analysisData, setAnalysisData] = useState(null);
  const [loading, setLoading] = useState(false);

  const handleUploadSuccess = (data) => {
    setAnalysisData(data);
  };

  const handleDownloadJSON = () => {
    if (!analysisData) return;

    const jsonString = JSON.stringify(analysisData, null, 2);
    const blob = new Blob([jsonString], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const link = document.createElement('a');
    link.href = url;
    link.download = `fraud-detection-results-${new Date().toISOString()}.json`;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    URL.revokeObjectURL(url);
  };

  const handleLoadResults = async () => {
    setLoading(true);
    try {
      const response = await axios.get(`${API_URL}/results`);
      setAnalysisData(response.data);
    } catch (error) {
      console.error('Error loading results:', error);
      alert('Failed to load results. Please upload a CSV file first.');
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className="min-h-screen bg-gray-100">
      {/* Header */}
      <header className="bg-gradient-to-r from-blue-600 to-blue-800 text-white shadow-lg">
        <div className="container mx-auto px-4 py-6">
          <h1 className="text-4xl font-bold mb-2">Money Muling Detection Engine</h1>
          <p className="text-blue-100">
            Advanced graph-based fraud detection system for identifying suspicious transaction patterns
          </p>
        </div>
      </header>

      {/* Main Content */}
      <main className="container mx-auto px-4 py-8">
        {/* Upload Section */}
        <Upload onUploadSuccess={handleUploadSuccess} />

        {/* Load Results Button */}
        {!analysisData && (
          <div className="mb-6">
            <button
              onClick={handleLoadResults}
              disabled={loading}
              className="px-6 py-3 bg-gray-600 text-white rounded-lg font-semibold hover:bg-gray-700 disabled:bg-gray-400 transition-colors"
            >
              {loading ? 'Loading...' : 'Load Previous Results'}
            </button>
          </div>
        )}

        {/* Summary Panel */}
        {analysisData && (
          <div className="mb-6">
            <SummaryPanel
              summary={analysisData.summary}
              onDownload={handleDownloadJSON}
            />
          </div>
        )}

        {/* Graph Visualization */}
        {analysisData && (
          <div className="mb-6">
            <GraphView data={analysisData} />
          </div>
        )}

        {/* Fraud Rings Table */}
        {analysisData && analysisData.fraud_rings && (
          <div className="mb-6">
            <RingTable fraudRings={analysisData.fraud_rings} />
          </div>
        )}

        {/* Suspicious Accounts Table */}
        {analysisData && analysisData.suspicious_accounts && (
          <div className="mb-6">
            <div className="bg-white rounded-lg shadow-lg p-6">
              <h2 className="text-2xl font-bold text-gray-800 mb-4">
                Suspicious Accounts
              </h2>
              <div className="overflow-x-auto">
                <table className="min-w-full divide-y divide-gray-200">
                  <thead className="bg-gray-50">
                    <tr>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Account ID
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Suspicion Score
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Detected Patterns
                      </th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Ring ID
                      </th>
                    </tr>
                  </thead>
                  <tbody className="bg-white divide-y divide-gray-200">
                    {analysisData.suspicious_accounts.map((account, index) => (
                      <tr key={account.account_id || index} className="hover:bg-gray-50">
                        <td className="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                          {account.account_id}
                        </td>
                        <td className="px-6 py-4 whitespace-nowrap text-sm">
                          <span
                            className={`font-semibold ${
                              account.suspicion_score >= 70
                                ? 'text-red-600'
                                : account.suspicion_score >= 50
                                ? 'text-orange-600'
                                : 'text-yellow-600'
                            }`}
                          >
                            {account.suspicion_score.toFixed(1)}
                          </span>
                        </td>
                        <td className="px-6 py-4 text-sm text-gray-500">
                          <div className="flex flex-wrap gap-1">
                            {account.detected_patterns?.map((pattern, idx) => (
                              <span
                                key={idx}
                                className="px-2 py-1 bg-purple-100 text-purple-800 rounded-full text-xs font-semibold"
                              >
                                {pattern}
                              </span>
                            ))}
                          </div>
                        </td>
                        <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                          {account.ring_id || '-'}
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        )}
      </main>

      {/* Footer */}
      <footer className="bg-gray-800 text-gray-300 py-6 mt-12">
        <div className="container mx-auto px-4 text-center">
          <p className="text-sm">
            Money Muling Detection Engine - Graph-based Fraud Detection System
          </p>
        </div>
      </footer>
    </div>
  );
}

export default App;
